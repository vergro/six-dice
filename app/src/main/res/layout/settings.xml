<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/felt2"
    android:orientation="vertical" >
	<LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
		  <TextView
	        		android:id="@+id/soundText" 
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:text="Sound Options"
			        android:layout_gravity="bottom"
			        android:gravity="center_horizontal"
	        		android:layout_weight="2"
				    />
		</LinearLayout>
	    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
		 		
		 		 <RadioGroup
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
        			android:layout_weight="4"
        			android:gravity="center"
				    android:id="@+id/radio_group1">
				    <RadioButton
				        android:id="@+id/radio_ori"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_weight="1"
				        android:text="Original"/>
				    <RadioButton
				        android:id="@+id/radio_new"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_weight="1"
				        android:text="New" />
				    <RadioButton
				        android:id="@+id/radio_mute"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_weight="1"
				        android:text="Mute" />
</RadioGroup>
		 </LinearLayout>


	
		<View
					android:layout_width="fill_parent"
					android:layout_height="2dip"
					android:background="#FFFFFFFF"/>
		
		<LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
		<Button
				 android:id="@+id/resetScore2" 
				 android:text="Reset High Scores"
				 android:layout_width="fill_parent"
		         android:layout_height="wrap_content"
		        android:layout_weight="0.7"  />
		 <TextView
        		android:id="@+id/resetText" 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/reset_string"
		        android:gravity="center"
		        android:layout_weight="0.4"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
				    />	
	    </LinearLayout>
	     <TextView
        		android:id="@+id/developerText" 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/developer"
		        android:gravity="center"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:textColor="#FFF"
				    />	
		<TextView
        		android:id="@+id/versionText" 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/version_no"
		        android:gravity="center"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:textColor="#FFF"
				    />	
		
	     
</LinearLayout>